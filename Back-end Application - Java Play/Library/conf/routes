# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index
# An example controller showing how to use dependency injection
GET     /count                      controllers.CountController.count
# An example controller showing how to write asynchronous code
GET     /message                    controllers.AsyncController.message


GET     /library                      controllers.LibraryController.index()
GET     /library/create               controllers.LibraryController.create()
GET     /library/report               controllers.LibraryController.report()
GET     /library/:id                  controllers.LibraryController.get(id : String)
GET     /library/edit/:id             controllers.LibraryController.edit(id : String)
POST    /library/edit                 controllers.LibraryController.update()
POST    /library/create               controllers.LibraryController.save()
GET     /library/delete/:id           controllers.LibraryController.delete(id : String)
GET     /library/deleteIsbn/:id       controllers.LibraryController.deleteIsbn(id : String)
POST    /library/borrow               controllers.LibraryController.borrowIsbn()
GET     /library/return/:id           controllers.LibraryController.returnItem(id : String)





# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
